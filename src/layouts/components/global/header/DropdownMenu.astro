---
import type { NavigationLink } from "@/types";
import { getLocaleUrlCTM } from "@/lib/utils/i18nUtils";
import NavMegaMenu from "@/layouts/components/global/header/MegaMenu.astro";

const { recursive } = Astro.props;
const menu = Astro.props.menu as NavigationLink;
const { pathname } = Astro.url;
const normalizePath = (value: string) => {
  if (!value) return "/";
  const clean = value.split("?")[0].split("#")[0];
  return clean !== "/" && clean.endsWith("/") ? clean.slice(0, -1) : clean;
};
const currentPath = normalizePath(pathname);
const toLocalePath = (url?: string) =>
  url && !url.startsWith("http")
    ? normalizePath(getLocaleUrlCTM(url, Astro.currentLocale))
    : null;
const activeChildPaths =
  menu.children?.map((child) => toLocalePath(child.url)).filter(Boolean) ?? [];
---

<li
  class:list={[
    "hs-dropdown nav-dropdown group [--auto-close:inside] [--offset:0px]",
    recursive ? "nav-dropdown-item [--placement:right-start]" : "nav-item",
    menu.hasMegaMenu || menu.hasChildren ? "relative" : "",
    menu.hasMegaMenu
      ? "lg:[--strategy:absolute]"
      : menu.hasChildren
        ? "lg:[--strategy:absolute]"
        : "",
  ]}
  role="menuitem">
  <span
    class:list={[
      "nav-dropdown-toggle hs-dropdown-toggle flex items-center",
      {
        active:
          activeChildPaths.includes(currentPath),
      },
      recursive
        ? "nav-dropdown-link justify-between"
        : "nav-link max-lg:flex! max-lg:justify-between",
    ]}>
    {menu.name}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      data-icon
      class="hs-dropdown-open:rotate-180 ml-2 h-4 w-4 transition duration-300">
      <path d="m6 9 6 6 6-6"></path>
    </svg>
  </span>
  {
    !menu.hasMegaMenu && menu.hasChildren && (
      <ul
        class="nav-dropdown-list hs-dropdown-menu hs-dropdown-open:mt-2! hs-dropdown-open:pointer-events-auto hs-dropdown-open:opacity-100 pointer-events-none absolute top-0 mt-4 hidden opacity-0 transition-[opacity,margin] max-lg:m-0! max-lg:transform-none!"
        {...(recursive ? { "aria-orientation": "vertical" } : {})}>
        {menu.children?.map((child) =>
          child.hasChildren ? (
            child.hasChildren && <Astro.self recursive menu={child} />
          ) : (
            <li class="nav-dropdown-item" role="menuitem">
              {
                (() => {
                  const childHref = getLocaleUrlCTM(
                    child.url || Astro.url.origin,
                    Astro.currentLocale,
                  );
                  const childActive =
                    !child.url?.startsWith("http") &&
                    currentPath === normalizePath(childHref);
                  return (
              <a
                href={childHref}
                {...{
                  // Set `rel` attribute for external links or use provided value
                  rel: child.url?.startsWith("http")
                    ? child.rel || "noopener noreferrer"
                    : child.rel || undefined,

                  // Set `target` to "_blank" for external links unless otherwise specified
                  target: child.url?.startsWith("http")
                    ? child.target || "_blank"
                    : child.target || undefined,
                }}
                class:list={[
                  "nav-dropdown-link block",
                  {
                    active: childActive,
                  },
                ]}>
                {child.name}
              </a>
                  );
                })()
              }
            </li>
          ),
        )}
      </ul>
    )
  }
  {!menu.hasChildren && menu.hasMegaMenu && <NavMegaMenu menu={menu} />}
</li>
