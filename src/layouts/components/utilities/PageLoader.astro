<div
  class="page-loader pointer-events-none fixed bottom-0 left-0 z-50 size-full bg-white transition duration-300 [&.inactive]:opacity-0">
  <script>
    const pageLoader = document.querySelector(".page-loader");

    document.addEventListener("DOMContentLoaded", () => {
      if (pageLoader) {
        setTimeout(() => {
          pageLoader.classList.add("inactive");
        }, 100);
      }
    });
  </script>
</div>
