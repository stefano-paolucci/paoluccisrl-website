---
import CustomButton from "@/components/CustomButton.astro";
import Icons from "@/helpers/Icons.astro";

const bonusImage = "/images/bonus2.avif";
---

<section id="bonusIncentives" class="w-full bg-[#e9ebee] dark:bg-[#2a2c2f]">
  <div
    class="grid items-stretch grid-cols-1 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]">
    <figure
      class="relative m-0 min-h-0 overflow-hidden bg-[linear-gradient(140deg,#d9dde2_0%,#cfd4da_52%,#dce0e4_100%)] dark:bg-[linear-gradient(140deg,#393d43_0%,#32363b_55%,#3c4046_100%)] max-lg:aspect-[16/10]">
      {
        bonusImage ? (
          <img
            src={bonusImage}
            alt="Bonus infissi 2026"
            class="absolute inset-0 h-full w-full object-cover"
            loading="lazy"
            decoding="async"
          />
        ) : (
          <div class="absolute inset-0 flex items-center justify-center text-[rgb(38_38_38_/_0.7)] dark:text-[rgb(255_255_255_/_0.74)]">
            <Icons icon="ImagePlus" class="h-7 w-7" />
          </div>
        )
      }
    </figure>

    <div
      class="flex flex-col justify-center gap-[0.85rem] px-[clamp(1.25rem,4vw,4rem)] py-[clamp(2rem,3.8vw,4rem)] text-[#262626] dark:text-white">
      <p
        class="m-0 text-xs font-bold tracking-[0.24em] text-[rgb(38_38_38_/_0.64)] uppercase sm:text-[0.78rem] md:text-[0.8rem] lg:text-[0.82rem] dark:text-[rgb(255_255_255_/_0.7)]">
        Bonus infissi 2026
      </p>
      <h2 class="m-0 text-3xl leading-[1.08] font-bold sm:text-4xl md:text-[2.35rem] lg:text-[2.55rem]">
        Il momento giusto per cambiare infissi Ã¨ adesso.
      </h2>
      <p
        class="m-0 text-[0.96rem] leading-[1.58] text-[rgb(38_38_38_/_0.76)] sm:text-base md:text-[1.05rem] lg:text-[1.08rem] dark:text-[rgb(255_255_255_/_0.82)]">
        Una sintesi rapida dei bonus disponibili nel 2026.
      </p>

      <div
        class="mt-8 mb-8 grid gap-[0.55rem] rounded-2xl border border-[rgb(38_38_38_/_0.16)] bg-[#f6f7f8] p-[0.9rem] dark:border-[rgb(255_255_255_/_0.18)] dark:bg-[#33363a]">
        <article class="m-0 grid grid-cols-[auto_minmax(0,1fr)] items-start gap-[0.65rem]">
          <span
            class="inline-flex h-[1.85rem] w-[1.85rem] items-center justify-center rounded-full bg-[rgb(119_184_45_/_0.18)] text-[#4f7f1f] dark:bg-[rgb(119_184_45_/_0.34)] dark:text-[#dbf3bf]">
            <Icons icon="House" class="h-4 w-4" />
          </span>
          <p class="m-0 text-sm leading-[1.48] text-[rgb(38_38_38_/_0.76)] sm:text-[0.92rem] md:text-[0.95rem] lg:text-[0.95rem] dark:text-[rgb(255_255_255_/_0.82)]">
            <strong>Ristrutturazione:</strong> 50% prima casa, 36% altre abitazioni.
          </p>
        </article>

        <article class="m-0 grid grid-cols-[auto_minmax(0,1fr)] items-start gap-[0.65rem]">
          <span
            class="inline-flex h-[1.85rem] w-[1.85rem] items-center justify-center rounded-full bg-[rgb(119_184_45_/_0.18)] text-[#4f7f1f] dark:bg-[rgb(119_184_45_/_0.34)] dark:text-[#dbf3bf]">
            <Icons icon="Leaf" class="h-4 w-4" />
          </span>
          <p class="m-0 text-sm leading-[1.48] text-[rgb(38_38_38_/_0.76)] sm:text-[0.92rem] md:text-[0.95rem] lg:text-[0.95rem] dark:text-[rgb(255_255_255_/_0.82)]">
            <strong>Ecobonus:</strong> fino al 50% con massimale dedicato.
          </p>
        </article>

        <article class="m-0 grid grid-cols-[auto_minmax(0,1fr)] items-start gap-[0.65rem]">
          <span
            class="inline-flex h-[1.85rem] w-[1.85rem] items-center justify-center rounded-full bg-[rgb(119_184_45_/_0.18)] text-[#4f7f1f] dark:bg-[rgb(119_184_45_/_0.34)] dark:text-[#dbf3bf]">
            <Icons icon="ShieldCheck" class="h-4 w-4" />
          </span>
          <p class="m-0 text-sm leading-[1.48] text-[rgb(38_38_38_/_0.76)] sm:text-[0.92rem] md:text-[0.95rem] lg:text-[0.95rem] dark:text-[rgb(255_255_255_/_0.82)]">
            <strong>Bonus Sicurezza:</strong> detrazione anche su infissi anti intrusione.
          </p>
        </article>
      </div>

      <CustomButton
        class="btn-md w-fit"
        enable={true}
        label="Maggiori informazioni"
        variant="fill"
        url="/bonus/"
        rel=""
        target=""
      />
    </div>
  </div>
</section>
