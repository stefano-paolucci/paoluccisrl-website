---
import Base from "@/layouts/Base.astro";
import Section_1 from "@/pages/components/sections/Section_1.astro";
import HomeHero from "@/pages/components/sections/HomeHero.astro";
import HomeHeroMobile from "@/pages/components/sections/HomeHero_mobile.astro";
import HowItWorks from "@/pages/components/sections/HowItWorks.astro";
import Partner from "@/pages/components/sections/Partner.astro";
import Features from "@/pages/components/sections/FeaturesSection.astro";
import BurgerParallaxInsights from "@/pages/components/sections/BurgerParallaxInsights.astro";
import BurgerParallaxInsightsMobile from "@/pages/components/sections/BurgerParallaxInsights_mobile.astro";
import BenefitsSection from "@/pages/components/sections/BenefitsSection.astro";
import ScrollModelStory from "@/pages/components/sections/ScrollModelStory.astro";
import BonusIncentivesStrip from "@/pages/components/sections/BonusIncentivesStrip.astro";
import CTA from "@/pages/components/sections/CTA.astro";

import banner2 from "../assets/images/banner_home2.avif";
---

<!-- <p>{heroText}</p> -->


<Base
  homepage={true}
  title="Paolucci SRL | Infissi in PVC Schüco"
  metaDescription="Produciamo infissi in PVC Schüco su misura, con posa qualificata, assistenza dedicata e consulenza completa.">
  
  <div class="hidden lg:block">
    <HomeHero />
  </div>

  <div class="lg:hidden">
    <HomeHeroMobile />
  </div>

  <Section_1 />

 <section class="w-full">
  <div class="relative w-full h-[360px] sm:h-[460px] md:h-[600px] lg:h-[1200px] overflow-hidden">
    <img
      src={banner2.src}
      alt=""
      loading="eager"
      fetchpriority="high"
      class="absolute inset-0 w-full h-full object-cover object-center object-top"
    />
  </div>
</section>

